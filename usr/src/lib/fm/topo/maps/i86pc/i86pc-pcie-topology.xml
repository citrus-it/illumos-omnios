<topology name='pciebus' scheme='pcie'>
  <range name='cpu' min='0' max='15'>
    <enum-method name='pciebus' version='1' />
    <dependents grouping='children'>
      <!--
          The limit of 32 root complexes per physical CPU is somewhat
          arbitrary, but exceeds any real i86pc system today.
      -->
      <range name='root-complex' min='0' max='31'>
        <enum-method name='pciebus' version='1' />
      </range>
    </dependents>
  </range>
</topology>
