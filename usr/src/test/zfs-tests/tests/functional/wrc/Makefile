include $(SRC)/Makefile.master

ROOTOPTPKG = $(ROOT)/opt/zfs-tests
TESTDIR = $(ROOTOPTPKG)/tests/functional/wrc

PROGS = cleanup \
	setup \
	wrc_001_pos \
	wrc_002_pos \
	wrc_003_pos \
	wrc_004_pos \
	wrc_005_neg \
	wrc_006_neg \
	wrc_007_neg \
	wrc_008_pos \
	wrc_009_pos \
	wrc_010_neg \
	wrc_011_neg \
	wrc_012_pos

FILES = wrc.cfg \
	wrc.kshlib

CMDS = $(PROGS:%=$(TESTDIR)/%) $(FILES:%=$(TESTDIR)/%)
$(CMDS) := FILEMODE = 0555

all lint clean clobber:

install: $(CMDS)

$(CMDS): $(TESTDIR)

$(TESTDIR):
	$(INS.dir)

$(TESTDIR)/%: %.ksh
	$(INS.rename)

$(TESTDIR)/%: %
	$(INS.file)
