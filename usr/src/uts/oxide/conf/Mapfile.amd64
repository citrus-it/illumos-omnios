$mapfile_version 2

LOAD_SEGMENT text {
	FLAGS = READ WRITE EXECUTE;
	NOHDR;
	PADDR = 0x200000;
	VADDR = 0xFFFFFFFFFBC00000;
	OS_ORDER = .text;
	ASSIGN_SECTION {
		TYPE = PROGBITS;
		FLAGS = ALLOC !WRITE;
	};
};

#
# kernel data
#
LOAD_SEGMENT data {
	FLAGS = READ WRITE EXECUTE;
	PADDR = 0x400000;
	VADDR = 0xFFFFFFFFFBE00000;
	OS_ORDER = .data;
	ASSIGN_SECTION {
		TYPE = PROGBITS;
		FLAGS = ALLOC WRITE;
	};
	ASSIGN_SECTION {
		TYPE = NOBITS;
		FLAGS = ALLOC WRITE;
	};
};

NOTE_SEGMENT note {
	ASSIGN_SECTION {
		TYPE = NOTE;
	};
};
