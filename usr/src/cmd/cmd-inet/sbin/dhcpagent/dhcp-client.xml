<service_bundle type='manifest' name='SUNWcs:dhcp-agent'>

<service
	name='network/dhcp-client'
	type='service'
	version='1'>

	<create_default_instance enabled='true' />

	<single_instance/>

	<dependency name='dhcp-network-datalink'
		grouping='require_any'
		restart_on='none'
		type='service'>
		<service_fmri value='svc:/network/datalink:default' />
	</dependency>

	<dependent name='dhcp-network-physical'
		grouping='require_all'
		restart_on='none'>
		<service_fmri value='svc:/network/physical' />
	</dependent>

	<exec_method
		type='method'
		name='start'
		exec='/sbin/dhcpagent'
		timeout_seconds='60'>
	</exec_method>

	<exec_method
		type='method'
		name='stop'
		exec=':kill'
		timeout_seconds='20' />

	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'> DHCP client
			</loctext>
		</common_name>
		<documentation>
			<manpage title='dhcpagent' section='1M'
				manpath='/usr/share/man' />
		</documentation>
	</template>
</service>

</service_bundle>
